<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".DummySectionFragment" >

    <TextView
            android:id="@+id/workout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_alignParentRight="true" android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true" android:text="Test"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/workout_picture"
            android:layout_below="@+id/workout_title" android:layout_alignParentLeft="true"
            android:src="@drawable/gym3000_sign_128x128"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test"
            android:id="@+id/workout_descr"
            android:layout_below="@+id/workout_picture"
            android:layout_alignParentLeft="true" android:layout_alignParentRight="true"/>
    <!-- <TextView
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:id="@+id/workout_descr"
             android:layout_below="@+id/workout_title"
             android:layout_alignParentLeft="true" android:text="Test"/>-->

</RelativeLayout>