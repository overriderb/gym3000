<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ProgramSectionFragment" >

    <TextView
            android:id="@+id/workout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_alignParentRight="true" android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true" android:text="Workout"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/workout_picture"
            android:layout_alignWithParentIfMissing="false" android:layout_below="@+id/workout_title"
            android:layout_centerHorizontal="true"
            />
    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/scrollView2"
            android:layout_alignParentLeft="true" android:layout_below="@+id/workout_picture">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Workout description"
                android:textSize="20dp"
                android:id="@+id/workout_descr"
                android:layout_alignParentLeft="true" android:layout_alignParentRight="true"/>
    </ScrollView>
</RelativeLayout>