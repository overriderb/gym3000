<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <View
        android:id="@+id/top_progress_bar_line"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@android:color/black"/>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/programProgressBar"
            android:progressDrawable="@layout/progress_bar_drawable"
            android:layout_gravity="center_horizontal"
            android:text="@string/program_layout_history"
            android:layout_below="@+id/top_progress_bar_line"/>

    <View
        android:id="@+id/buttom_progress_bar_line"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@android:color/black"
        android:layout_below="@+id/programProgressBar"/>

    <android.support.v4.view.ViewPager
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/program_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/buttom_progress_bar_line">

            <android.support.v4.view.PagerTitleStrip
                    android:id="@+id/pagerTitleStrip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="#33b5e5"
                    android:textColor="#fff" />
    </android.support.v4.view.ViewPager>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/program_point_up_picture"
        android:src="@drawable/point_up_white"
        android:onClick="startHistory"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>