<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/program_frame_layout">

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/programProgressBar"
            android:progressDrawable="@layout/progress_bar_drawable"
            android:layout_gravity="center_horizontal"

            android:text="@string/program_layout_history"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/program_point_up_picture"
            android:src="@drawable/point_up_white"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal|top"
            android:onClick="startHistory"/>
    </FrameLayout>


    <!--<Button-->
        <!--style="?android:attr/buttonStyleSmall"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/program_layout_history"-->
        <!--android:id="@+id/program_to_history_button"-->
        <!--android:onClick="startHistory"/>-->



    <android.support.v4.view.ViewPager
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/program_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <android.support.v4.view.PagerTitleStrip
                    android:id="@+id/pagerTitleStrip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="#33b5e5"
                    android:textColor="#fff" />
    </android.support.v4.view.ViewPager>
</LinearLayout>